<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://taskBrowse.caption"
        focusComponent="tasksTable"
        messagesPack="com.company.teamtasksproject.web.screens.task">
    <data readOnly="true">
        <collection id="tasksDc"
                    class="com.company.teamtasksproject.entity.Task">
            <view extends="_local">
                <property name="project" view="_local"/>
            </view>
            <loader id="tasksDl">
                <query>
                    <![CDATA[select e from teamtasksproject_Task e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tasksTable"
            spacing="true">
        <filter id="filter"
                applyTo="tasksTable"
                dataLoader="tasksDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="tasksTable"
                    width="100%"
                    dataContainer="tasksDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="title"/>
                <column id="description"/>
                <column id="status"/>
                <column id="priority"/>
                <column id="dueDate"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="tasksTable.create"/>
                <button id="editBtn" action="tasksTable.edit"/>
                <button id="removeBtn" action="tasksTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://taskEdit.caption"
        focusComponent="form"
        messagesPack="com.company.teamtasksproject.web.screens.task">
    <data>
        <instance id="taskDc"
                  class="com.company.teamtasksproject.entity.Task">
            <view extends="_local">
                <property name="project" view="_minimal"/>
                <property name="assignee" view="_minimal"/>
                <property name="author" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="taskDc">
            <column width="350px">
                <textField id="titleField" property="title"/>
                <textArea id="descriptionField" property="description" rows="5"/>
                <lookupPickerField id="projectField"
                                   property="project"
                                   required="true">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear"  type="picker_clear"/>
                    </actions>
                </lookupPickerField>
                <lookupField id="statusField" property="status"/>
                <lookupField id="priorityField" property="priority"/>
                <dateField id="dueDateField" property="dueDate"/>
                <lookupPickerField id="assigneeField"
                                   property="assignee">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear"  type="picker_clear"/>
                    </actions>
                </lookupPickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://projectBrowse.caption"
        focusComponent="projectsTable"
        messagesPack="com.company.teamtasksproject.web.screens.project">
    <data readOnly="true">
        <collection id="projectsDc"
                    class="com.company.teamtasksproject.entity.Project">
            <view extends="_local"/>
            <loader id="projectsDl">
                <query>
                    <![CDATA[select e from teamtasksproject_Project e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="projectsTable"
            spacing="true">
        <filter id="filter"
                applyTo="projectsTable"
                dataLoader="projectsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="projectsTable"
                    width="100%"
                    dataContainer="projectsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="description"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="projectsTable.create"/>
                <button id="editBtn" action="projectsTable.edit"/>
                <button id="removeBtn" action="projectsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
